
      <div class="panel panel-primary">
     	<div class="panel-heading">
     		<h3 class="panel-title"><%= @status.user.full_name %></h3>
     	</div>
     	<div class="panel-body">
     		<p><%= @status.content %></p>
     		<div class="statusControl">
	     		<a><%= link_to 'Edit', edit_status_path(@status) %> |</a>
	     		<a><%= link_to 'Delete', @status, method: :delete, data: {confirm: 'Are you sure you want to delete this status?'} %> |</a>
	     		<a><%= link_to 'Back', statuses_path %></a>
   			</div>
     	</div>
     </div>